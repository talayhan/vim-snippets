snippet saddctime
	#include <stdio.h>
	#include <time.h>
	{
		time_t t;
		time(&t);
		printf("[%s-%d]Current time: %s", __func__, __LINE__, ctime(&t));
	}

snippet sgettimeofday
	#include <stdio.h>
	#include <sys/time.h>  // for gettimeofday()
	#include <unistd.h>    // for sleep()
	{
		struct timeval start, end;

		gettimeofday(&start, NULL);
		// do some stuff here
		gettimeofday(&end, NULL);

		long diff = (end.tv_sec*1000000 + end.tv_usec) - (start.tv_sec*1000000 + start.tv_usec);
		printf("The elapsed time is %lu micros\n", diff);
	}

snippet sgettimeofdaypure
	struct timeval start, end;

	gettimeofday(&start, NULL);
	// do some stuff here
	gettimeofday(&end, NULL);

	long diff = (end.tv_sec*1000000 + end.tv_usec) - (start.tv_sec*1000000 + start.tv_usec);
	printf("The elapsed time is %lu micros\n", diff);

snippet slog2file
	FILE *${1:filename} = fopen("$1.log", "a+"); // a+ (create + append)
	fprintf($1, "${2:I'm logging something ...}\n");
	fclose($1);

snippet ARRAY_SIZE
